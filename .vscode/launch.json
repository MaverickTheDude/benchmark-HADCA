{
    "configurations": [
    {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/builddir/main",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/builddir",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Włącz formatowanie kodu dla gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description":  "Ustaw wariant dezasemblacji na Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "build debug meson",
        "visualizerFile": "${workspaceFolder}/Eigen/Eigen.natvis",
        "showDisplayString": true
    }
    ]
}